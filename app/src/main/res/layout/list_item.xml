<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_padding10"
                android:paddingRight="@dimen/dimen_padding10">

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="@dimen/list_view_w"
        android:layout_height="@dimen/list_view_h"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/dimen_padding10"
        app:srcCompat="@drawable/oll"/>

    <TextView
        android:id="@+id/list_item_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_item_image"
        android:padding="@dimen/dimen_padding10"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="oll Title"/>

</RelativeLayout>